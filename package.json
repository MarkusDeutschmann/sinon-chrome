{
  "name": "sinon-chrome",
  "version": "3.0.1",
  "description": "Mock of chrome extensions API for unit testing under nodejs",
  "homepage": "https://github.com/acvetkov/sinon-chrome",
  "author": {
    "name": "Aleksey Tsvetkov",
    "email": "aleksey.dmitrich@gmail.com"
  },
  "contributors": [
    {
      "name": "Aleksey Tsvetkov",
      "email": "aleksey.dmitrich@gmail.com",
      "url": "https://github.com/acvetkov"
    },
    {
      "name": "Vitaly Potapov",
      "email": "noginsk@rambler.ru",
      "url": "https://github.com/vitalets"
    },
    {
      "name": "Sokratis Vidros",
      "email": "sokratis.vidros@gmail.com",
      "url": "https://github.com/SokratisVidros"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/acvetkov/sinon-chrome.git"
  },
  "bugs": {
    "url": "https://github.com/acvetkov/sinon-chrome/issues"
  },
  "keywords": [
    "chrome",
    "firefox",
    "extensions",
    "apps",
    "test",
    "tdd",
    "webextensions",
    "chrome api",
    "sinon"
  ],
  "main": "out/index.js",
  "types": "out/index.d.ts",
  "scripts": {
    "clean": "shx rm -rf ./out/",
    "lint": "eslint ./src ./test",
    "test": "mocha --recursive --require @babel/register --require ./test/setup.js",
    "test-navigate": "mocha --require @babel/register examples/navigate.test.js",
    "test-events": "mocha --require @babel/register examples/events.test.js",
    "test-then": "mocha --require @babel/register examples/then-chrome.test.js",
    "transpile": "babel ./src --out-dir ./out",
    "build": "npm run clean && npm run transpile && webpack && shx cp -R ./src/config out/config && shx cp ./src/typeDefs/index.d.ts ./out/",
    "predeploy": "npm run clean && npm run lint && npm test && npm run build && npm run copy2out",
    "bundle": "webpack",
    "bundle-dev": "webpack --watch --progress",
    "copy2out": "shx cp ./readme.md ./out/readme.md && shx cp ./package.json ./out/package.json && shx cp -R ./dist out/bundle"
  },
  "license": "ISC",
  "dependencies": {
    "lodash": "^4.17.21",
    "sinon": "^15.2.0",
    "urijs": "^1.19.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "7.22.9",
	"@babel/register": "7.22.5",
    "@types/sinon": "^10.0.15",
    "@types/webpack": "^5.28.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^9.1.3",
    "babel-register": "^6.26.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.45.0",
    "eslint-plugin-import": "^2.27.5",
    "json-loader": "^0.5.7",
    "mocha": "^10.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-tldr-reporter": "^1.0.0",
    "shx": "0.3.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
